@model List<DemoApp2.Context.demo2>
@{
    ViewBag.Title = "StudentList";
}

<h2>StudentList</h2>

<table class="table table-hover">
    <tr>
        <th> Name </th>
        <th> Father's Name </th>
        <th> Email-ID </th>
        <th> Phone Number </th>
        <th> Description </th>
        <th> Action </th> 

    @foreach (var item in Model)
    {
      <tr>
          <td> @item.Name </td>
          <td> @item.FName</td>
          <td> @item.Email</td>
          <td> @item.Mobile </td>
          <td> @item.Description</td>
          <td>
              <a href="@Url.Action("Student", new { item.ID, item.Name, item.FName, item.Email, item.Mobile, item.Description})" class="btn btn-success"> Edit</a>
              <a href="@Url.Action("Delete", new { item.ID})" class="btn btn-danger"> Delete</a>
          </td>
      </tr>
    }
    

    </tr>
</table>

